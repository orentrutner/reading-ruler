{
  "manifest_version": 2,
  "name": "Reading Ruler",
  "version": "1.1",
  "description": "Highlights the line of text you are reading.",

  "permissions": [ "storage", "tabs" ],

  "icons": {
    "48": "icons/ruler-48.png",
    "96": "icons/ruler-96.png",
    "128": "icons/ruler-128.png"
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/ruler-48.png",
      "96": "icons/ruler-96.png",
      "128": "icons/ruler-128.png"
    },
    "default_popup": "popup/popup.html",
    "show_matches": ["http://*/*", "https://*/*"]
  },

  "background": {
    "scripts": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "src/common/extension.js",
      "src/common/options.js",
      "src/background/background.js"
    ]
  },

  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "css": ["css/main.css"],
    "js": [
      "node_modules/webextension-polyfill/dist/browser-polyfill.min.js",
      "src/content/range.js",
      "src/content/rect.js",
      "src/content/polyfills.js",
      "src/content/ruler.js",
      "src/content/main.js"
    ],
    "all_frames": true
  }]
}